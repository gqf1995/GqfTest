<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_15_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radio_layout_shap"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp"
            android:text="添加图片"
            android:textColor="@color/font_color02"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/font_color04"/>
        <TextView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp"
            android:text="从相册选取"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/dimen_16_sp"
            android:background="@drawable/light_dark_sel"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/font_color04"/>
        <TextView
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp"
            android:text="拍照"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/dimen_16_sp"
            android:background="@drawable/bottom_right_left_radio_light_dark_sel"
            />
    </LinearLayout>

    <Button
        android:id="@+id/dimess"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dp"
        android:layout_marginTop="@dimen/dimen_15_dp"
        android:background="@drawable/dimess_light_dark_layout_sel"
        android:text="取消"
        android:textSize="@dimen/dimen_16_sp"
        android:textColor="@android:color/white"
        />

</LinearLayout>