<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <include layout="@layout/lin_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ling_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30_dp"
            android:gravity="center"
            android:text="--------------------------------------------------------------------------------------------------------------------------------------------------"
            android:textSize="@dimen/dimen_16_sp"
            android:textColor="@color/font_color05"
            android:paddingLeft="@dimen/dimen_15_dp"
            android:paddingRight="@dimen/dimen_15_dp"
            android:ellipsize="none"
            android:singleLine="true"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35_dp"
            layout="@layout/default_item_bottom"
            android:layout_below="@+id/ling_txt"
            />
    </RelativeLayout>

</LinearLayout>