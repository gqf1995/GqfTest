<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <include layout="@layout/lin_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/src_txt"
            android:layout_width="@dimen/dimen_80_dp"
            android:layout_height="@dimen/dimen_80_dp"
            android:background="@color/font_color03"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_15_dp"
            android:text="外部\n链接"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_16_sp"
            />

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35_dp"
            layout="@layout/default_item_bottom"
            android:layout_below="@+id/src_txt"
            />
    </RelativeLayout>
</LinearLayout>